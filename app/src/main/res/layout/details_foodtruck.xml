<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtDescripcionFT"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="330dp"
        android:text="TextView"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="678dp"
        android:src="@tools:sample/avatars"
        tools:srcCompat="@drawable/regresar" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="513dp"
        android:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtDetalles"
        android:layout_width="352dp"
        android:layout_height="89dp"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@+id/imageView2"
        android:text="@string/txt_DetallesTitulo"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtNombreFT"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="422dp"
        android:text="TextView"
        android:textSize="34sp"
        android:textStyle="bold" />

</RelativeLayout>